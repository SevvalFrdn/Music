@model Music.Models.Album

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>

<h4>Album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AlbumID" />
            <div class="form-group">
                <label asp-for="AlbumName" class="control-label"></label>
                <input asp-for="AlbumName" class="form-control" />
                <span asp-validation-for="AlbumName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumYear" class="control-label"></label>
                <input asp-for="AlbumYear" class="form-control" />
                <span asp-validation-for="AlbumYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumPrice" class="control-label"></label>
                <input asp-for="AlbumPrice" class="form-control" />
                <span asp-validation-for="AlbumPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MusicTypeID" class="control-label"></label>
                <select asp-for="MusicTypeID" class="form-control" asp-items="ViewBag.MusicTypeID"></select>
                <span asp-validation-for="MusicTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SingerID" class="control-label"></label>
                <select asp-for="SingerID" class="form-control" asp-items="ViewBag.SingerID"></select>
                <span asp-validation-for="SingerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

