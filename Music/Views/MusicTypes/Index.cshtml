@model IEnumerable<Music.Models.MusicType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Music Types</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MusicTypeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MusicTypeName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MusicTypeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MusicTypeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MusicTypeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
