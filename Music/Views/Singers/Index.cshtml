@model IEnumerable<Music.Models.Singer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SingerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SingerBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SingerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SingerBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.CompanyName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SingerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SingerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SingerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
